<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:padding="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/drum"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2dp"
            android:onClick="play1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/red_color"/>
        <Button
            android:layout_margin="2dp"
            android:onClick="play2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/purple_color"/>
        <Button
            android:layout_margin="2dp"
            android:onClick="play3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/blue_color"/>
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2dp"
            android:onClick="play4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/seablue_color"/>
        <Button
            android:layout_margin="2dp"
            android:onClick="play5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cyan_color"/>
        <Button
            android:layout_margin="2dp"
            android:onClick="play6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/teal_color"/>
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2dp"
            android:onClick="play7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/green_color"/><Button
            android:layout_margin="2dp"
            android:onClick="play8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/lime_color"/>
        <Button
            android:layout_margin="2dp"
            android:onClick="play9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/amber_color"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap To Make Sound!!"
        android:textSize="10sp"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:paddingTop="40dp"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sticks"
        android:layout_gravity="center"
        />
</LinearLayout>